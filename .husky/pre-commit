#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Se placer dans la racine Git du projet (peu importe o√π on lance la commande)
cd "$(git rev-parse --show-toplevel)" || exit 1

# Maintenant tu peux faire tes commandes
